<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="loveq.rc.plaiddemo.MainActivity">

    <LinearLayout
        android:id="@+id/ll_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3c3c3c"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:padding="10dp">


        <ImageView
            android:id="@+id/filter_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="40dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/filter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_normal"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:text="Popular Designer News Popular Designer News Popular Designer News Popular Designer News Popular Designer News"/>
    </LinearLayout>

    <loveq.rc.plaiddemo.ui.widget.ForegroundLinearLayout
        android:id="@+id/ll_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3c3c3c"
        android:clickable="true"
        android:foreground="?android:selectableItemBackground"
        android:padding="10dp"
        android:theme="@style/PlaidDarkOverlay">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="40dp"
            android:src="@mipmap/ic_launcher"/>

        <loveq.rc.plaiddemo.ui.widget.BaselineGridTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_normal"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:text="Popular Designer News Popular Designer News Popular Designer News Popular Designer News Popular Designer News"/>
    </loveq.rc.plaiddemo.ui.widget.ForegroundLinearLayout>

</LinearLayout>
